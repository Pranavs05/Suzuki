<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450.106" Width="850.177">
	<StackPanel Orientation="Horizontal">

		<ListView DockPanel.Dock="Right" DataContext="{Binding Logger}" ItemsSource="{Binding Logs}" >
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Timestamp" Width="90" DisplayMemberBinding="{Binding Timestamp}" />
					<GridViewColumn Header="Message" Width="300" DisplayMemberBinding="{Binding Message}" />
				</GridView>
			</ListView.View>
		</ListView>
	</StackPanel>
</Window>
